extends ../../layout/layout

block content
	section#list-Email
		h1 Emails
		a.pure-button(href="/admin/collection/Email/new"): b + New email

		if data.length !== 0
			table.pure-table
				thead
					tr
						th Account
						th Emailname
						th Edit

				tbody
					each email in data
						tr
							td: a(href='/admin/collection/Email/'+ email._id)!= email.account
							td= email.user
							td: a(href="/admin/collection/Email/" + email._id + "/edit") Edit

		p #{data.length} emails
