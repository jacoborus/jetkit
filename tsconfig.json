{
  "compilerOptions": {
    "target": "ES2020",
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@/pages/*": [
        "src/components/pages/*"
      ],
      "@/ui/*": [
        "src/components/ui/*"
      ],
      "@/*": [
        "src/*"
      ]
    }
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "index.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
