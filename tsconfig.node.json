{
  "compilerOptions": {
    "allowJs": true,
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "paths": {
      "@/pages/*": [
        "src/components/pages/*"
      ],
      "@/ui/*": [
        "src/components/ui/*"
      ],
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "vite.config.ts",
    "src/config.ts"
  ]
}
